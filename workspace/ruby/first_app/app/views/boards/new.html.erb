<%= link_to "スレッド一覧に戻る", boards_path %>
<% if @board.errors.any? %>
	<ul>
		<% @board.errors.full_messages.each do | error | %>
			<li><%= error %></li>
		<% end %>
	</ul>
<% end %>
<hr>
<h1>Boards#new</h1>
<%= form_for @board, method: :post do |f| %>
	タイトル: <%= f.text_field :title %> <br>
	作成者名: <%= f.text_field :editor %> <br>
	<%= f.submit %>
<% end %>

